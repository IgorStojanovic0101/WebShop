@model IEnumerable<WebShop.Models.CoverTypeModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Types List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New</a>
        </div>
    </div>
  
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
          
            <td class="row">

                        <a asp-action="Edit" class="col-md-2 btn btn-success" asp-route-id="@item.Id">
                         <i class="bi bi-pen"></i>
                         <br>
                         Edit
                        </a>
                          &nbsp;
                        <a asp-action="Details" class="col-md-2 btn btn-primary" asp-route-id="@item.Id">
                            <i class="bi bi-ui-checks-grid"></i>
                            Details
                        </a>
                        &nbsp;
                        <a asp-action="Delete" class="col-md-2 btn btn-danger" asp-route-id="@item.Id">
                            <i class="bi bi-trash3"></i>
                            Delete
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
