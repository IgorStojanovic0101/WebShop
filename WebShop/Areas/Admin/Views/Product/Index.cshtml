@model IEnumerable<WebShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="productTable" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>  
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
      
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
              
            <th>
               Category
            </th>
            <th>
            Cover Type
            </th> 
               
               
            <th></th>
        </tr>
    </thead>
   
</table>
</div>

@section Scripts
{
    <script src ="~/js/product/product.js"></script>
}